<table cellpadding="0">
  <tr class="<%= (predicates || (composite && !newProperty)) ? 'input-prepend' : '' %>">

    <% if (predicates) { %>

    <td class="predicate-row">
      <span class="add-on">
        <select class="predicate">
          <option value="~"><%= i18n('field.string.form.contains') %></option>
          <option value="="><%= i18n('field.string.form.equals') %></option>
        </select>
      </span>
    </td>

    <% } else if (composite && !newProperty) { %>

    <td class="predicate-row">
      <span class="add-on"><%= property.displayName %></span>
    </td>

    <% } %>


    <td class="input-row">
      <% if(property.displayType === 'textarea') { %>
        <textarea placeholder="<%= property.displayName %>"><%= value %></textarea>
      <% } else { %>
        <input placeholder="<%= property.displayName %>" value="<%= value %>" type="text"/>
      <% } %>
    </td>
</table>
